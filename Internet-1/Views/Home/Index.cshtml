<hr />
@if (Model.SystemFiles.Count == 0)
{
    <caption>Herhangi bir dosya yüklü değil</caption>
}
else
{
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Id)</th>
                <th>Dosya Adı</th>
                <th>Dosya Tipi</th>
                <th>Dosya Uzantısı</th>
                <th>Açıklama</th>
                <th>Yükleme Tarihi</th>
                <th class="text-center">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @{
                int siraNo = 1;
            }
            @foreach (var file in Model.SystemFiles)
            {
                <tr>
                    <td class="text-center">@(siraNo++)</td>
                    <td>@file.FileName</td>
                    <td>@file.FileType</td>
                    <td>@file.Extension</td>
                    <td>@file.Description</td>
                    <td>@file.UploadOn</td>
                    <td class="text-center">
                        <a asp-controller="File" asp-action="Download" asp-route-id="@file.Id" class="btn btn-primary btn-sm">İndir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}